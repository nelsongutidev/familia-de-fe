---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import SermonList from "../components/Sections/SermonList.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection
    title="Bienvenidos a Familia de Fe"
    subtitle="Para Su Gloria entre las naciones"
    backgroundImage="/uploads/biblia2.jpg"
    ctaText="Planifica tu visita"
    ctaLink="/im-new"
    secondaryCtaText="Ver Sermones"
    secondaryCtaLink="/sermons"
  />

  <!-- Service Times -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Acompáñanos este domingo
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Servicio de Adoración</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">
              Domingo a las 10:30 AM
            </p>
            <p class="text-gray-600 mb-4">
              Culto dominical de adoración con musica y enseñanza expositiva de
              la Palabra de Dios.
            </p>
            <p class="italic text-gray-500">Presencial</p>
          </div>

          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Estudio Bíblico</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">
              Jueves a las 7:00 PM
            </p>
            <p class="text-gray-600 mb-4">
              Únete a nosotros para un tiempo de estudio y reflexión bíblica.
            </p>
            <p class="italic text-gray-500">En línea</p>
          </div>
        </div>

        <Button href="/conocenos" variant="outline"> Conócenos </Button>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="/uploads/church-default.webp"
            alt="Our Church"
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>

        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Sobre Nosotros</h2>
          <p class="text-gray-700 mb-6 text-lg">
            En Familia de Fe, nuestra misión es glorificar a Dios y hacer
            discípulos de todas las naciones. Creemos en el poder transformador
            del evangelio y en vivir una vida centrada en Cristo.
          </p>
          <p class="text-gray-700 mb-8 text-lg">
            Únete a nosotros para adorar, aprender y crecer juntos en la fe.
            Todos son bienvenidos en nuestra comunidad de fe.
          </p>

          <Button href="/conocenos"> Aprende Más Sobre Nosotros </Button>
        </div>
      </div>
    </div>
  </section>

